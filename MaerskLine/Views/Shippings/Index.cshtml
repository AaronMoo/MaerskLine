@model IEnumerable<MaerskLine.Models.Shipping>

@{
    ViewBag.Title = "Index";
}

<h2>Shipment Details</h2>

<p>
    @Html.ActionLink("Create Shipment", "Create")
</p>
<table class="table" style="background-color:antiquewhite">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArriveDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArriveDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ShippingID }) <br />
            @Html.ActionLink("Details", "Details", new { id=item.ShippingID }) <br />
            @Html.ActionLink("Delete", "Delete", new { id=item.ShippingID })
        </td>
    </tr>
}

</table>
